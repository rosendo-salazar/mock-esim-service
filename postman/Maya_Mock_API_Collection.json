{
  "info": {
    "_postman_id": "maya-mock-api-collection",
    "name": "Maya Mock API",
    "description": "Mock Maya Mobile eSIM API for testing fly-roamy-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "password",
        "value": "{{api_secret}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8082"
    },
    {
      "key": "api_key",
      "value": "maya_test_key"
    },
    {
      "key": "api_secret",
      "value": "maya_test_secret"
    },
    {
      "key": "test_iccid",
      "value": ""
    },
    {
      "key": "test_product_uid",
      "value": "product_usa_5gb_30d"
    },
    {
      "key": "test_plan_type_id",
      "value": "plan_usa_5gb_30d"
    }
  ],
  "item": [
    {
      "name": "01. Health & Auth",
      "item": [
        {
          "name": "Health Check (Public)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/admin/health",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "health"]
            }
          }
        },
        {
          "name": "Test Valid Auth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products"]
            }
          }
        },
        {
          "name": "Test Invalid Auth",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {"key": "username", "value": "wrong_key", "type": "string"},
                {"key": "password", "value": "wrong_secret", "type": "string"}
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products"]
            }
          }
        }
      ]
    },
    {
      "name": "02. Account & Products",
      "item": [
        {
          "name": "Get Account Balance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/balance",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "balance"]
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products/{{test_product_uid}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products", "{{test_product_uid}}"]
            }
          }
        },
        {
          "name": "Filter Products by Country (US)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products?country=us",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products"],
              "query": [{"key": "country", "value": "us"}]
            }
          }
        },
        {
          "name": "Filter Products by Region (Europe)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products?region=europe",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products"],
              "query": [{"key": "region", "value": "europe"}]
            }
          }
        },
        {
          "name": "Product Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/account/products/nonexistent_product",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "account", "products", "nonexistent_product"]
            }
          }
        }
      ]
    },
    {
      "name": "03. eSIM Creation",
      "item": [
        {
          "name": "Create New eSIM",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.iccid) {",
                  "        pm.collectionVariables.set('test_iccid', jsonData.iccid);",
                  "        console.log('Saved ICCID:', jsonData.iccid);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_type_id\": \"{{test_plan_type_id}}\",\n  \"region\": \"us\",\n  \"customer_id\": \"customer_{{$timestamp}}\",\n  \"tag\": \"test-order-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim"]
            }
          }
        },
        {
          "name": "Create eSIM - Minimal",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_type_id\": \"{{test_plan_type_id}}\",\n  \"region\": \"us\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim"]
            }
          }
        },
        {
          "name": "Create with Invalid Plan Type",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_type_id\": \"invalid_plan\",\n  \"region\": \"us\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim"]
            }
          }
        }
      ]
    },
    {
      "name": "04. eSIM Management",
      "item": [
        {
          "name": "Get eSIM Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}"]
            }
          }
        },
        {
          "name": "Get eSIM Plans",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}/plans",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}", "plans"]
            }
          }
        },
        {
          "name": "Get eSIM Regions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}/regions",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}", "regions"]
            }
          }
        },
        {
          "name": "Change eSIM (Update)",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tag\": \"updated-tag-{{$timestamp}}\",\n  \"customer_id\": \"updated_customer_id\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}"]
            }
          }
        },
        {
          "name": "eSIM Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/8900000000000000000",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "8900000000000000000"]
            }
          }
        }
      ]
    },
    {
      "name": "05. Top Up (Create Plan)",
      "item": [
        {
          "name": "Top Up eSIM (Add Plan)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}/plan/{{test_plan_type_id}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}", "plan", "{{test_plan_type_id}}"]
            }
          }
        },
        {
          "name": "Top Up with Different Plan",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}/plan/plan_usa_10gb_30d",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}", "plan", "plan_usa_10gb_30d"]
            }
          }
        },
        {
          "name": "Top Up - Invalid Plan Type",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}/plan/invalid_plan",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}", "plan", "invalid_plan"]
            }
          }
        },
        {
          "name": "Top Up - Invalid ICCID",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/8900000000000000000/plan/{{test_plan_type_id}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "8900000000000000000", "plan", "{{test_plan_type_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "06. eSIM Deletion",
      "item": [
        {
          "name": "Delete eSIM",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/{{test_iccid}}",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "{{test_iccid}}"]
            }
          }
        },
        {
          "name": "Delete Non-Existent eSIM",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/connectivity/v1/esim/8900000000000000000",
              "host": ["{{base_url}}"],
              "path": ["connectivity", "v1", "esim", "8900000000000000000"]
            }
          }
        }
      ]
    },
    {
      "name": "07. Usage Simulation (Admin)",
      "item": [
        {
          "name": "Simulate Data Usage (100MB)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"iccid\": \"{{test_iccid}}\",\n  \"usageMB\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/admin/simulate/usage",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "simulate", "usage"]
            }
          }
        },
        {
          "name": "Simulate Heavy Usage (5000MB)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"iccid\": \"{{test_iccid}}\",\n  \"usageMB\": 5000\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/admin/simulate/usage",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "simulate", "usage"]
            }
          }
        }
      ]
    },
    {
      "name": "08. Admin Operations",
      "item": [
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/admin/statistics",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "statistics"]
            }
          }
        },
        {
          "name": "Force Status Change",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"iccid\": \"{{test_iccid}}\",\n  \"newStatus\": \"expired\",\n  \"reason\": \"Testing expiration flow\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/admin/simulate/status",
              "host": ["{{base_url}}"],
