      ]
    },
    {
      "name": "09. QR Codes",
      "item": [
        {
          "name": "Get QR Code Image",
          "request": {
            "auth": {"type": "noauth"},
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/qr/{{test_iccid}}",
              "host": ["{{base_url}}"],
              "path": ["qr", "{{test_iccid}}"]
            }
          }
        },
        {
          "name": "Get QR Code Base64",
          "request": {
            "auth": {"type": "noauth"},
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/qr/{{test_iccid}}/base64",
              "host": ["{{base_url}}"],
              "path": ["qr", "{{test_iccid}}", "base64"]
