          "name": "Reset All Data",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/admin/reset",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "reset"]
            }
          }
